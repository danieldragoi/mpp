<AnchorPane prefHeight="150.0" prefWidth="260.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <VBox layoutX="7.0" layoutY="7.0" prefHeight="145.0" prefWidth="260.0"  AnchorPane.rightAnchor="0.0">
         <children>
            <HBox prefHeight="46.0" prefWidth="260.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="26.0" prefWidth="78.0" text="username:" textAlignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameField" prefHeight="26.0" prefWidth="164.0" promptText="oficiu@gmail.com" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="47.0" prefWidth="260.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="78.0" text="password:" textAlignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField" prefHeight="26.0" prefWidth="163.0" />
               </children>
            </HBox>
            <Button fx:id="butonNext" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onClickButonNext" prefHeight="16.0" prefWidth="90.0" text="next">
